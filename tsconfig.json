{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ES2022"
    ],
    "baseUrl": "src/main",
    "outDir": "types",
  },
  "include": [
    "src/common/**/*.ts",
    "src/common/**/*.d.ts"
  ]
}
