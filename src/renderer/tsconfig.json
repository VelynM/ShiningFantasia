{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@common": [
        "../common"
      ],
      "@common/*": [
        "../common/*"
      ],
      "@components": [
        "./components"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@store": [
        "./store"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@views": [
        "./views"
      ],
      "@views/*": [
        "./views/*"
      ]
    }
  },
  "include": [
    "@common/**/*.ts",
    "@common/**/*.d.ts",
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.vue"
  ]
}
